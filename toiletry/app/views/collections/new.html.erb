<h1>Collection#new</h1>

<% if @collection.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@collection.errors.count, "error") %>
      prohibited this item from being saved:
    </h2>
 
    <ul>
    <% @collection.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<%= form_for @collection do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <h2>Add Item to Collection:</h2>
  <%= f.fields_for :item do |item| %>
    <%= item.label :brand %>
    <%= item.text_field :brand %>
    <br>

    <%= item.label :name %>
    <%= item.text_field :name %>
    <br>
    <%= item.label :description %>
    <%= item.text_area :description %>
    <br>
    <%= item.label :quantity %>
    <%= item.text_field :quantity %>
  <% end %>

  <br>
  <br>

  <%= f.submit %>
<% end %>

<br>
<br>
<%= link_to 'Cancel', collections_path %>
<p>Find me in app/views/collection/new.html.erb</p>
