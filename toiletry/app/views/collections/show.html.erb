<h2><%= @collection.title %></h2>

<br>
<br>

<h2>Add Item to Collection:</h2>

<%= form_for @item do |f| %>
  <%= f.collection_select :brand, Brand.all, :id, :name %>
  <%= f.text :name %>
  <%= f.text_area :description %>
  <%= f.text :quantity %>
  <%= f.submit %>
<% end %>


