<h1>Collection#show</h1>

<h2>Collection: <%= @collection.title %></h2>

  <% @collection_items.each_with_index do |item, index| %>
    <%= index + 1 %>. <%= link_to "#{item.brand} dot name #{item.name}", collection_item_path(collection_id: @collection.id, id: item.id) %><br>
  <% end%>


<br>
<br>

<%= button_to new_collection_item_path(@collection.id), {class: "btn btn-default btn-lg"}, method: :get do %>
    <span class="glyphicon glyphicon-plus"></span> Add Item
<% end %>


<br>
<br>
<%= link_to 'Back to Collections', collections_path %>


